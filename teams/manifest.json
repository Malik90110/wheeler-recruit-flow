
{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "com.wheelerstaffing.productivitytracker",
  "packageName": "com.wheelerstaffing.productivitytracker",
  "developer": {
    "name": "Wheeler Staffing",
    "websiteUrl": "https://wheelerstaffing.com",
    "privacyUrl": "https://wheelerstaffing.com/privacy",
    "termsOfUseUrl": "https://wheelerstaffing.com/terms"
  },
  "icons": {
    "color": "icon-color.png",
    "outline": "icon-outline.png"
  },
  "name": {
    "short": "Wheeler Staffing",
    "full": "Wheeler Staffing - Productivity Tracker"
  },
  "description": {
    "short": "Track productivity, manage announcements, and engage in company contests",
    "full": "Wheeler Staffing Productivity Tracker helps teams stay connected with company announcements, track productivity metrics, participate in contests, and collaborate effectively."
  },
  "accentColor": "#2563EB",
  "bots": [],
  "composeExtensions": [],
  "configurableTabs": [
    {
      "configurationUrl": "https://your-app-domain.com/?teams=true&tab=config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ],
      "context": [
        "channelTab",
        "privateChatTab",
        "meetingChatTab",
        "meetingDetailsTab"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "dashboard",
      "name": "Dashboard",
      "contentUrl": "https://your-app-domain.com/?teams=true&tab=dashboard",
      "websiteUrl": "https://your-app-domain.com/",
      "scopes": [
        "personal"
      ]
    },
    {
      "entityId": "bulletin",
      "name": "Bulletin Board",
      "contentUrl": "https://your-app-domain.com/?teams=true&tab=bulletin",
      "websiteUrl": "https://your-app-domain.com/",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "your-app-domain.com"
  ],
  "webApplicationInfo": {
    "id": "your-azure-app-id",
    "resource": "https://your-app-domain.com"
  }
}
